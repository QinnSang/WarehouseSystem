<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ContractExpenseMapper">

    <insert id="add" parameterType="pojo.Contract">
        insert into contract_expense (expense_dictionary_value_id,price,contract_id,remark)
        values
        <foreach collection="contractExpenseList" item="expense" separator=",">
            (
                #{expense.expenseDictionaryValueId},
                #{expense.price},
                #{expense.contractId}
                ,#{expense.remark,jdbcType=VARCHAR}
              )
        </foreach>
    </insert>

    <resultMap id="ContractExpenseBase" type="pojo.ContractExpense">
        <result property="expenseId" column="expense_id"/>
        <result property="price" column="price"/>
        <result property="remark" column="remark"/>
        <result property="expenseDictionaryValueId" column="expenseDictionaryValueId"/>
        <association property="expenseDictionary" javaType="pojo.DataDictionary">
            <result property="valueName" column="expenseName"/>
        </association>
    </resultMap>

    <select id="queryByContractId" resultMap="ContractExpenseBase" parameterType="integer">
        select
            expense_id,
            price,
            remark,
            t2.value_id as expenseDictionaryValueId,
            t2.value_name as expenseName
        from contract_expense t1
        LEFT JOIN data_dictionary t2 ON t1.expense_dictionary_value_id= t2.value_id
        <where>
                t1.contract_id=#{contractId} and t2.type_code='EXPENSE'
        </where>
    </select>

    <delete id="deleteByContractId" parameterType="integer">
        delete from contract_expense where contract_id=#{contractId}
    </delete>

    <select id="queryAllExpense" resultType="pojo.DataDictionary">
        select * from data_dictionary
        <where>
            type_code = 'EXPENSE'
        </where>
    </select>

</mapper>